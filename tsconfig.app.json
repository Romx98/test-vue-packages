{
  "extends": "./tsconfig.json",
  "include": [
    "env.d.ts",
    "index.d.ts",
    "lib/**/*",
    "lib/**/*.vue",
    "demo/main.ts",
    "demo/App.vue"
  ],
  "exclude": ["lib/**/__tests__/*"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "noImplicitAny": false,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "declarationDir": "types",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["lib/*"]
    }
  }
}
